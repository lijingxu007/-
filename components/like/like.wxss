/* 喜欢 */

.perfect {
  padding: 20rpx;
  font-size: 32rpx;
}

.like {
  display: flex;
  flex-direction: row; /*决定主轴的方向*/
  flex-wrap: wrap; /* 定义如果一条轴线排不下，换行 */
}

.like-li {
  position: relative;
  flex: 0 1 50%;
  border: 2px solid #fff;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.like-li image {
  display: block;
  width: 100%;
  height: 200rpx;
  background: #ededed;
}

.like-li .title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 320rpx;  
  font-size: 25rpx;
  padding:5rpx 15rpx;
  background: #ededed;
  
}